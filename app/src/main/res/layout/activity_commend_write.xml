<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommendWriteActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="left"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="군도"
            android:textSize="30sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_15"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line"
        android:layout_marginBottom="10dp"/>

    <RatingBar
        android:id="@+id/commendRatingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평점을 입력해 주세요"
        android:textSize="@dimen/detail_title_size"
        android:textColor="@color/gray1"/>
    <EditText
        android:id="@+id/commendText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxLength="100"
        android:gravity="top"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:hint="100자 이내로 작성해주세요."
        android:background="@drawable/command_editbox"
        android:textCursorDrawable="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:padding="10dp">
        <Button
            android:id="@+id/save_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/all_button_back"
            android:text="저장"
            android:textSize="@dimen/detail_title_size"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"/>
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/all_button_back"
            android:text="취소"
            android:textSize="@dimen/detail_title_size"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>